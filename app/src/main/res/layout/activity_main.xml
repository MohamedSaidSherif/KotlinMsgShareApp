<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <EditText
        android:id="@+id/activity_main_message_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/activity_main_send_data_to_second_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_message_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Send Data To Second Activity"/>

    <Button
        android:id="@+id/activity_main_hobbies_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Hobbies"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

</RelativeLayout>